                "description": "Handle incoming email from MTA",
                "tags": [
                    "mta"
                ],
                "responses": {
                    "200": {
                        "description": "No response body"
                    }
                }
            }
        },
        "/api/v1.0/mta/inbound-email/": {
            "post": {
                "operationId": "mta_inbound_email_create",
                "description": "Handle incoming email from MTA",
                "tags": [
